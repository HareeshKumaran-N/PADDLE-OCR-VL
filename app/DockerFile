FROM python:3.10-slim

# System deps for opencv runtime (headless) and general OCR libs
RUN apt-get update && apt-get install -y --no-install-recommends \
    libglib2.0-0 libsm6 libxext6 libxrender1 \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /workspace

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy code + samples (so container can run standalone)
COPY main.py ./main.py
COPY samples ./samples

# results created at runtime; HOME writable for PaddleOCR downloads/caches
ENV HOME=/tmp
ENV PADDLE_PDX_DISABLE_MODEL_SOURCE_CHECK=True

# Default run: batch OCR with angle detection enabled
CMD ["python", "main.py", "--samples", "samples", "--results", "results", "--angle"]